{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist/main",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "skipLibCheck": true
  },
  "include": ["src/main/**/*.ts"]
}
